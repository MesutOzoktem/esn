<body>
    <!--/start-login-one-->
    <div class="container">
        <div id="alertDivForModal"></div> <!-- Bu div uyarı bootstrap modal ı içindir-->
    </div>
    <div style="width:100%">
        <img class="imgLogo" src="~/Content/Images/logo.png" al />
    </div>
    
    <div class="login">
        <div class="ribbon-wrapper h2 ribbon-red">
            <div class="ribbon-front">
                <span>User Login</span>
            </div>
            <div class="ribbon-edge-topleft2"></div>
            <div class="ribbon-edge-bottomleft"></div>
        </div>
        @using (Html.BeginForm("Login","Account",FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <ul>
                <li>
                    <input id="emailInput" name="mail" type="text" class="text" placeholder="Email Address"><a href="#" class="icon"><i class="fa fa-envelope marginLeft"></i></a>
                </li>
                <li>
                    <input id="passwordInput" name="password" type="password" placeholder="Password"><a href="#" class="icon"><i class="fa fa-lock marginLeft"></i></a>
                </li>
            </ul>
            <div class="submit">
                <input id="loginButton" type="button" value="Log in">
                <input id="loginButtonHidden" type="submit" hidden value="Log in">
            </div>
        }
        <div class="signUp">
            Don't have an account? <a href="@Url.Action("SignUp","Account")">Sign up</a>
        </div>
    </div>

</body>
</html>
